#!/usr/bin/env zsh
#
#
THE_ARGS="$@"
THIS_DIR="$(dirname "$(dirname "$0")")"

if [[ -z "$@" ]]; then
  action="watch"
else
  action=$1
  shift
fi

set -u -e -o pipefail

PATH="$PATH:$THIS_DIR/bin"
EDITOR=${EDITOR:-nvim}
CACHE="$THIS_DIR/progs/cache"
FILE_HISTORY="$CACHE"/files.txt

case $action in
  help|--help|-h)
    PATH="$PATH:$THIS_DIR/../mksh_setup/bin"
    mksh_setup print-help $0 "$@"
    ;;

  *)

    mkdir -p "$CACHE"
    touch "$FILE_HISTORY"

    FUNC_FILE="$THIS_DIR/bin/public/${action}/_.sh"

    if [[ -s  "$FUNC_FILE"  ]]; then

      export THIS_FILE="$FUNC_FILE"
      export THIS_FUNC="$action"
      export THIS_FUNC_DIR="$THIS_DIR/bin/public/${action}"

      source "$THIS_FILE"
      "$THIS_FUNC" "$@"
      return 0
    fi

    SH_FILE="$THIS_DIR/sh/${action}/_"
    if [[ -s "$SH_FILE" ]]; then
      source "$SH_FILE"
      exit 0
    fi

    # === Check progs/bin:
    if [[ -f "progs/bin/$action" ]]; then
      export PATH="$PWD/progs/bin:$PATH"
      progs/bin/$action "$@"
      exit 0
    fi

    # === It's an error:
    echo "!!! Unknown action: $action" 1>&2
    exit 1
    ;;

esac
